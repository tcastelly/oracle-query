{
  "compilerOptions": {
    "strict": true,
    "strictFunctionTypes": false,
    "strictPropertyInitialization":  false,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    // for tsc definition only
    "declaration": true,
  },
  "include": [
    "src",
    "tests",
    "types",
    "jest.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
